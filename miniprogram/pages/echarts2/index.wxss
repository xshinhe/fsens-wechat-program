/* pages/echarts/index.wxss */
.container {
  height: 100%;
}

.chart-container {
  height: 40%;
  background: #fff;
}

.table-container {
  height: 55%;
  transition-property: 0.5;
  flex: 1;
  padding: 20rpx;
  background: #e26f6f;
}

.table-header {
  display: flex;
  background: #4a90e2;
  border-radius: 12rpx 12rpx 0 0;
  padding: 20rpx;
}

.header-cell {
  flex: 1;
  color: white;
  font-weight: bold;
  text-align: center;
}

.table-body {
  background: white;
  border-radius: 0 0 12rpx 12rpx;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx;
}

.body-cell {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.export-btn {
  flex: 1;
  font-size: 28rpx;
  background: #4a90e2;
  color: white;
  border-radius: 8rpx;
}
